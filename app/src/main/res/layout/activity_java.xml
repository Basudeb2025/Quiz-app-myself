<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/secondback"
    tools:context=".javaActivity">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Select one of this"
      android:textSize="40dp"
      android:textColor="?attr/colorOnBackground"
      android:layout_marginStart="20dp"
      android:textStyle="italic"
      android:layout_marginTop="40dp"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="90dp"
             android:orientation="horizontal"
             >
             <Button
                 android:id="@+id/jav"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:text="Java"
                 android:textSize="20dp"
                 android:background="@drawable/ssecrenbt"
                 android:layout_marginStart="50dp"
                 />
             <Button
                  android:id="@+id/c"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:text="C++"
                 android:background="@drawable/sleft"
                 android:layout_marginStart="40dp"
                 android:textSize="20dp"
                 />
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/pyt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Python"
                android:textSize="15dp"
                android:background="@drawable/btomleft"
                android:layout_marginStart="50dp"
                />
            <Button
                android:id="@+id/kot"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="kotlin"
                android:background="@drawable/btomright"
                android:layout_marginStart="40dp"
                android:textSize="15dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="10dp"
            android:layout_marginStart="40dp"
            />
        <Button
            android:id="@+id/exit"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_marginStart="80dp"
            android:textSize="10dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/fed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:text="Feedback"
        />
</LinearLayout>